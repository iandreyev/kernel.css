.ion-hero {
    background: linear-gradient(to right, #fafafa, #eeeeee);
    box-sizing: border-box;
    padding: 75px 0;
    text-align: center;

    h1, h2, h3, h4, h5, h6 {
        margin: 0;
    }

    h1 {
      font-size: 8.5em;
    }

    h2 {
      font-size: 6.5em;
    }

    h3 {
      font-size: 4.5em;
    }

    h4 {
      font-size: 2.5em;
    }

    p {
      font-size: 1.5em;
    }
}
